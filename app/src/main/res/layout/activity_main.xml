<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:text="Question sattempted"
      android:textAlignment="center"
      android:gravity="center"
      android:layout_marginTop="50dp"
      android:textSize="20sp"
      android:textColor="@color/cardview_dark_background"
      android:textAllCaps="false"
      android:id="@+id/idAttempted" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:text="Question"
      android:textAlignment="center"
      android:gravity="center"
      android:layout_below="@+id/idAttempted"
      android:layout_marginTop="30dp"
      android:textSize="30sp"
      android:textAllCaps="false"
      android:textColor="@color/cardview_dark_background"
      android:id="@+id/idquetions" />

      <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/idquetions"
       android:orientation="vertical"
       android:layout_marginTop="50dp">


      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:text="Option 1"
          android:textSize="20sp"
          android:padding="10dp"
          android:textAllCaps="false"
          android:id="@+id/idoption1"
          android:background="@color/purple_200"/>

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:text="Option 2"
          android:textSize="20sp"
          android:padding="10dp"
          android:textAllCaps="false"
          android:id="@+id/idoption2"
          android:background="@color/purple_200"/>

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:text="Option 3"
          android:textSize="20sp"
          android:padding="10dp"
          android:textAllCaps="false"
          android:id="@+id/idoption3"
          android:background="@color/purple_200"/>

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:text="Option 4"
          android:textSize="20sp"
          android:padding="10dp"
          android:textAllCaps="false"
          android:id="@+id/idoption4"
          android:background="@color/purple_200"/>

   </LinearLayout>


</RelativeLayout>